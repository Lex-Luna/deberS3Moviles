<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SemanaAlexisLuna.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Semana 3" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
        <Entry x:Name="txtContrasenia" Placeholder="Ingrese la contrasenia" IsPassword="True"/>
        <Button x:Name="Siguiente" Text="Siguiente" Clicked="Siguiente_Clicked"/>
    </StackLayout>

</ContentPage>
